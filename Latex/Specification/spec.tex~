\begin{tikzpicture}[mindmap]
  \begin{scope} [
    every node/.style={concept, circular drop shadow, execute at begin node=\hskip0pt},
    root concept/.append style={
      concept color=black, fill=white, line width=1ex, text=black, font=\large},
    text=white,
    input/.style={concept color=orange, faded/.style={concept color=orange!30}},
    basis/.style={concept color=green!50!black, faded/.style={concept color=green!50!black!30}},
